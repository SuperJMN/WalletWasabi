<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             xmlns:cells="clr-namespace:WalletWasabi.Fluent.ViewModels.CoinSelection.Core.Cells"
             x:DataType="cells:AnonymityScoreCellViewModel"
             x:CompileBindings="True"
             x:Class="WalletWasabi.Fluent.Views.CoinSelection.Core.Cells.AnonymityScoreCellView">

  <TextBlock TextAlignment="Center" Text="{Binding PrivacyScore^}"
             IsVisible="{Binding IsVisible^}"
             Classes.IsPrivate="{Binding IsPrivate^}"
             Classes.IsSemiPrivate="{Binding IsSemiPrivate^}"
             Classes.IsNonPrivate="{Binding IsNonPrivate^}">

    <TextBlock.Styles>
      <Style Selector="TextBlock.IsPrivate">
        <Setter Property="Foreground" Value="{DynamicResource PrivacyLevelPrivate}" />
      </Style>
      <Style Selector="TextBlock.IsSemiPrivate">
        <Setter Property="Foreground" Value="{DynamicResource PrivacyLevelSemiPrivate}" />
      </Style>
      <Style Selector="TextBlock.IsNonPrivate">
        <Setter Property="Foreground" Value="{DynamicResource PrivacyLevelNonPrivate}" />
      </Style>
    </TextBlock.Styles>
  </TextBlock>
</UserControl>
