<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:advms="clr-namespace:WalletWasabi.Fluent.ViewModels.AddWallet"
             xmlns:cols="clr-namespace:System.Collections;assembly=System.Runtime"
             xmlns:c="clr-namespace:WalletWasabi.Fluent.Converters"
             xmlns:aw="clr-namespace:WalletWasabi.Fluent.Views.AddWallet"
             xmlns:w="clr-namespace:WalletWasabi.Fluent.Controls.Wizard"
             xmlns:i="using:Avalonia.Xaml.Interactivity"
             xmlns:bs="clr-namespace:WalletWasabi.Fluent.Behaviors"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="600"
             x:Class="WalletWasabi.Fluent.Views.AddWallet.WelcomePageView"
             x:DataType="advms:WelcomePageViewModel"
             x:CompileBindings="True"
             x:Name="UserControl">
  <UserControl.Styles>

    <Style Selector="TextBlock">
      <Setter Property="TextAlignment" Value="Center" />
    </Style>

    <Style Selector="TextBlock.text">
      <Setter Property="Opacity" Value="0.5" />
      <Setter Property="FontWeight" Value="Light" />
      <Setter Property="FontSize" Value="14" />
    </Style>

    <Style Selector="TextBlock.title2">
      <Setter Property="TextWrapping" Value="Wrap" />
      <Setter Property="FontSize" Value="16" />
      <Setter Property="Margin" Value="0 8" />
      <Setter Property="Padding" Value="0 4 8 4" />
      <Setter Property="HorizontalAlignment" Value="Left" />
    </Style>

    <Style Selector="TextBlock.title1">
      <Setter Property="TextWrapping" Value="Wrap" />
      <Setter Property="FontSize" Value="31" />
    </Style>

  </UserControl.Styles>

  <UserControl.DataTemplates>
    <DataTemplate DataType="w:WizardPage">
      <ContentControl ContentTemplate="{Binding Template}" />
    </DataTemplate>
  </UserControl.DataTemplates>

  <UserControl.Resources>
    <cols:ArrayList x:Key="Pages" x:CompileBindings="False">
      <w:WizardPage NextText="Get started">
        <w:WizardPage.Template>
          <DataTemplate>
            <aw:WelcomePage1View />
          </DataTemplate>
        </w:WizardPage.Template>
      </w:WizardPage>
      <w:WizardPage NextText="Fees">
        <w:WizardPage.Template>
          <DataTemplate>
            <aw:WelcomePage2View />
          </DataTemplate>
        </w:WizardPage.Template>
      </w:WizardPage>
      <w:WizardPage NextText="Continue">
        <w:WizardPage.Template>
          <DataTemplate>
            <aw:WelcomePage3View />
          </DataTemplate>
        </w:WizardPage.Template>
      </w:WizardPage>
      <w:WizardPage>
          <w:WizardPage.Template>
            <DataTemplate>
              <aw:AddWalletView DataContext="{Binding #UserControl.((advms:WelcomePageViewModel)DataContext).AddWallet}" />
            </DataTemplate>
          </w:WizardPage.Template>
      </w:WizardPage>
    </cols:ArrayList>
  </UserControl.Resources>

  <DockPanel>

    <Button x:Name="PART_BackButton" DockPanel.Dock="Top"
            Margin="8 6"
            Classes="plain"
            HorizontalAlignment="Left"
            Focusable="{Binding CanGoBack^}"
            Opacity="{Binding CanGoBack^, Converter={x:Static c:BoolOpacityConverters.BoolToOpacity}}"
            Command="{Binding BackCommand}">
      <PathIcon Data="{StaticResource arrow_left_regular}" Width="16" />
    </Button>
    <Panel DockPanel.Dock="Bottom">
      <ListBox IsHitTestVisible="False" Background="Transparent" HorizontalAlignment="Center"
               SelectedIndex="{Binding #Carousel.SelectedIndex, Mode=OneWay}"
               Items="{Binding Source={StaticResource Pages}}">
        <ListBox.Styles>
          <Style Selector="ListBoxItem:selected /template/ ContentPresenter#PART_ContentPresenter">
            <Setter Property="Background" Value="Transparent" />
          </Style>
          <Style Selector="ListBoxItem:selected /template/ ContentPresenter">
            <Setter Property="TextBlock.Foreground" Value="{DynamicResource SystemChromeAltLowColor}" />
          </Style>
          <Style Selector="ListBoxItem">
            <Setter Property="Opacity" Value="0.3" />
            <Setter Property="IsTabStop" Value="False" />
          </Style>
          <Style Selector="ListBoxItem:selected">
            <Setter Property="Opacity" Value="1" />
          </Style>
        </ListBox.Styles>
        <ListBox.ItemsPanel>
          <ItemsPanelTemplate>
            <StackPanel Orientation="Horizontal" />
          </ItemsPanelTemplate>
        </ListBox.ItemsPanel>
        <ListBox.ItemTemplate>
          <DataTemplate>
            <Ellipse Fill="{DynamicResource SystemChromeAltLowColor}" Width="9" Height="9" />
          </DataTemplate>
        </ListBox.ItemTemplate>
      </ListBox>
      <Button Command="{Binding NextCommand}" Width="130" Height="40"
              IsDefault="True"
              HorizontalContentAlignment="Center"
              Focusable="{Binding CanGoNext^}"
              Opacity="{Binding #Carousel.((w:WizardPage)SelectedItem).IsNextVisible, Converter={x:Static c:BoolOpacityConverters.BoolToOpacity}}"
              Content="{Binding #Carousel.((w:WizardPage)SelectedItem).NextText, FallbackValue=''}"
              Classes="action" HorizontalAlignment="Right" />
    </Panel>
    <Carousel x:Name="Carousel" SelectedIndex="{Binding SelectedIndex}"
              Items="{Binding Source={StaticResource Pages}}" ItemCount="{Binding ItemCount, Mode=OneWayToSource}" />
  </DockPanel>

  <i:Interaction.Behaviors>
    <bs:FocusOnAttachedBehavior  IsEnabled="True" />
    <!--<bs:KeyDownTrigger Key="Enter" EventRoutingStrategy="Tunnel">
      <InvokeCommandAction Command="{Binding NextCommand}" />
    </bs:KeyDownTrigger>-->
    <bs:KeyDownTrigger Key="Right" EventRoutingStrategy="Tunnel">
      <InvokeCommandAction Command="{Binding NextCommand}" />
    </bs:KeyDownTrigger>
    <bs:KeyDownTrigger Key="Left" EventRoutingStrategy="Tunnel">
      <InvokeCommandAction Command="{Binding BackCommand}" />
    </bs:KeyDownTrigger>
    <bs:KeyDownTrigger Key="Back" EventRoutingStrategy="Tunnel">
      <InvokeCommandAction Command="{Binding BackCommand}" />
    </bs:KeyDownTrigger>
  </i:Interaction.Behaviors>

</UserControl>
