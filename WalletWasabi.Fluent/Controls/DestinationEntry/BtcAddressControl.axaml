<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:viewModels="clr-namespace:WalletWasabi.Fluent.Controls.DestinationEntry.ViewModels"
             xmlns:destinationEntry="clr-namespace:WalletWasabi.Fluent.Controls.DestinationEntry"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="WalletWasabi.Fluent.Controls.DestinationEntry.BtcAddressControl"
             x:DataType="viewModels:PaymentViewModel"
             x:CompileBindings="True"
             x:Name="UserControl">

  <UserControl.Styles>
    <Style Selector="StackPanel > DockPanel">
      <Setter Property="Margin" Value="0 10 0 0" />
    </Style>
  </UserControl.Styles>

  <StackPanel>

    <StackPanel.Styles>
      <Style Selector="DockPanel > Label">
        <Setter Property="MinWidth" Value="80" />
      </Style>
    </StackPanel.Styles>

    <destinationEntry:AddressEntryControl DataContext="{Binding #UserControl.PaymentController}" Watermark="Bitcoin address"/>

  </StackPanel>
</UserControl>
